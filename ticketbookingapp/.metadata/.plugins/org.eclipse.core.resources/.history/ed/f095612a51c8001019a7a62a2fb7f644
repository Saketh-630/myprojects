package com.moviebooking.entity;

import jakarta.persistence.*;

@Entity
@Table(name = "movies")
public class Movie {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(nullable = false)
    private String title;

    @Column(length = 1000)
    private String description;

    private String language;
    private String genre;
    private Integer durationMinutes;
    private String rating;       // e.g. U, UA, A

    private String status;       // NOW_SHOWING, COMING_SOON

    public Movie() {}

    public Movie(String title, String description, String language, String genre,
                 Integer durationMinutes, String rating, String status) {
        this.title = title;
        this.description = description;
        this.language = language;
        this.genre = genre;
        this.durationMinutes = durationMinutes;
        this.rating = rating;
        this.status = status;
    }

  
}

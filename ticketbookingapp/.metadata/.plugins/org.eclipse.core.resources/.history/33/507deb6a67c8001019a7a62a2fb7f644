/* ===========================
   Seat Layout (booking_seats)
   =========================== */


/* === Overrides for seat layout table to keep it centered & inside card === */

/* Let the seat table be only as wide as needed, and scroll if too big */
.seat-layout-wrapper {
    margin-top: 12px;
    padding: 16px;
    border-radius: var(--radius-lg);
    background: radial-gradient(circle at top, rgba(15,23,42,0.95), rgba(15,23,42,0.75));
    border: 1px solid rgba(30,64,175,0.6);

    /* key: allow horizontal scroll instead of content going outside */
    overflow-x: auto;
}

/* override global table styles for the seat layout specifically */
table.seat-layout {
    width: auto;              /* instead of 100% from global table */
    max-width: 100%;          /* don't grow beyond wrapper */
    margin: 8px auto 10px;    /* center it */
    background: transparent;  /* use wrapper bg */
    border-radius: 0;
    overflow: visible;
    table-layout: auto;
}

.seat-layout td {
    text-align: center;
    padding: 3px 4px;         /* slightly smaller padding to fit more seats */
    white-space: nowrap;      /* prevent line breaks inside cells */
}




.seat-legend {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 6px;
}





.seat-checkbox {
    display: none;
}

.seat-pill {
    display: inline-block;
    padding: 3px 6px;

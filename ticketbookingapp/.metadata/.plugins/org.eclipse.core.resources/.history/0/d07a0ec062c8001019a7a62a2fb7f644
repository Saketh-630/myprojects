            (<span th:text="${screen.theatre.city}"></span>)<br/>
            Screen: <b th:text="${screen.name}"></b><br/>
            Date: <b th:text="${show.showDate}"></b> ·
            Time: <b th:text="${show.showTime}"></b>
        </p>
        <p>
            Base Ticket Price:
            <b id="ticketPrice" th:text="${show.ticketPrice}"></b>
        </p>

        <div th:if="${error}" class="alert alert-error">
            <span th:text="${error}"></span>
        </div>
    </div>

    <!-- SEAT LAYOUT -->
    <div class="card mt-2 seat-layout-wrapper">

        <!-- Legend with different prices -->
        <div class="seat-legend">
            <div class="seat-legend-row">
                <span class="seat-legend-pill premium"></span>
                <span>
                    Premium (Front rows) –
                    <b th:text="${show.ticketPrice + 50}"></b>
                </span>
            </div>
            <div class="seat-legend-row">
                <span class="seat-legend-pill gold"></span>
                <span>
                    Gold (Middle rows) –
                    <b th:text="${show.ticketPrice}"></b>
                </span>
            </div>
            <div class="seat-legend-row">
                <span class="seat-legend-pill standard"></span>
                <span>
                    Standard (Back rows) –
                   <b th:text="${show.ticketPrice - 30}"></b>
   </span>
            </div>
            <div class="seat-legend-row">
                <span class="seat-legend-pill booked"></span>
                <span>Booked</span>
            </div>
        </div>

        <div class="text-muted mt-1">
        
        </div>

      

        <form th:action="@{/booking/confirm}" method="post" class="mt-2">
            <input type="hidden" name="showId" th:value="${show.id}"/>

            <table class="seat-layout">
                <tbody>
                <!-- row: 1..totalRows -->
                <tr th:each="row : ${#numbers.sequence(1, totalRows)}"
                   th:with="
    rowTier=${row <= 3 ? 'PREMIUM' : (row <= 7 ? 'GOLD' : 'STANDARD')},
    seatPrice=${row <= 3 ? show.ticketPrice + 50 : (row <= 7 ? show.ticketPrice : show.ticketPrice - 30)},
    aisleCol=${seatsPerRow / 2}">


                    <!-- Row label like A, B, C... -->
                    <td class="seat-row-label">
                        Row
                        <span th:text="${#strings.substring('ABCDEFGHIJKLMNOPQRSTUVWXYZ', row-1, row)}"></span>
                    </td>

                    <!-- seats: 1..seatsPerRow -->
                    <td th:each="col : ${#numbers.sequence(1, seatsPerRow)}">
                        <!-- Aisle: no seat here -->
                        <div th:if="${col == aisleCol}" class="seat-aisle"></div>

                        <!-- Real seat -->
                        <label th:if="${col != aisleCol}">
                            <!-- internal value: 'row-col' (e.g. 1-3) -->
                            <input class="seat-checkbox"
                                   type="checkbox"
                                   name="selectedSeats"
                                   th:value="${row + '-' + col}"
                                   th:attr="data-price=${seatPrice},data-tier=${rowTier}"
                                   th:disabled="${bookedSeats.contains(row + '-' + col)}"/>

                            <!-- visual label: A1, B5 etc -->
                            <span class="seat-pill"
                                  th:classappend="${rowTier == 'PREMIUM'} ? ' seat-premium' : (rowTier == 'GOLD' ? ' seat-gold' : ' seat-standard')"
                                  th:text="${#strings.substring('ABCDEFGHIJKLMNOPQRSTUVWXYZ', row-1, row) + col}">
                            </span>
                        </label>
                    </td>
                </tr>
                </tbody>
            </table>
  <!-- SCREEN THIS SIDE -->
        <div class="screen-banner mt-2">
            SCREEN THIS SIDE
        </div>
            <div id="seatSummary" class="seat-summary">No seats selected.</div>

            <div class="mt-2">
                <button type="submit" class="btn btn-primary">
                    Confirm Booking
                </button>
            </div>
        </form>

        <div class="text-muted mt-1">
            Front rows (A–B) are <b>Premium</b>, C–E are <b>Gold</b>, others are <b>Standard</b>.
            You can change these ranges in the template and controller if needed.
        </div>
    </div>

</div>

